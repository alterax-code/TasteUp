{% extends 'base.html.twig' %}

{% block title %}Recipe{% endblock %}

{% block body %}
    <h1>Recipe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ recipe.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ recipe.description }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ recipe.category }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ recipe.type }}</td>
            </tr>
            <tr>
                <th>Preparation_time</th>
                <td>{{ recipe.preparationTime }}</td>
            </tr>
            <tr>
                <th>Cooking_time</th>
                <td>{{ recipe.cookingTime }}</td>
            </tr>
            <tr>
                <th>Difficulty</th>
                <td>{{ recipe.difficulty }}</td>
            </tr>
            <tr>
                <th>Instructions</th>
                <td>{{ recipe.instructions }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ recipe.slug }}</td>
            </tr>
        </tbody>
    </table>
        <h2>Ingredients</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            {% for ingredient in recipe.ingredients %}
                <tr>
                    <td>{{ ingredient.name }}</td>
                    {# <td>{{ ingredient.quantity }}</td> #}
                </tr>
            {% else %}
                <tr>
                    <td colspan="1">No ingredients found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>


    <a href="{{ path('app_recipe_index') }}">back to list</a>

    <a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}">edit</a>

    {{ include('recipe/_delete_form.html.twig') }}
{% endblock %}
